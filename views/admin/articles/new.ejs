<%- include('../../partials/header') %>
<%- include('../../partials/navbar') %>

<div class="container">
    
    <div class="card">
        <div class="card-header">
            <h2>Novo Artigo</h2>
        </div>

        <div class="card-body">
            <form action="/articles/save" method="post">
                <label>Titulo:</label>
                <br>
                <input class="form-control" type="text" name="title" placeholder="Digite o titulo da categoria">
                <br>
                <label>Mensagem:</label>
                <br>
                <textarea class="form-control" name="body" placeholder="Escreva o artigo..." id="article"></textarea>
                <br>
                <label>Categoria</label>
                <select name="category" class="form-control">
                    <% categories.forEach((category) => { %>
                        <option value="<%= category.id %>"> <%= category.title %> </option>
                    <% }) %>
                </select>
                <br>
                <button class="btn btn-success">Cadastrar</button>
            </form>
        </div>
        
       
    </div>
    
</div>

<%- include('../../partials/footer') %>

<script src="/tinymce/tinymce.min.js"></script>
<script>

    tinymce.init({
        selector: "#article",
        language: 'pt_BR',
        plugin: [
            'advlist autolink link image lists print preview hr searchreplace wordcount fullscreen insertdatetime media save table paste emoticons'
        ]
    })

</script>